 <%bookmarks.each do |bookmark|%>

    <%= link_to demonstration_path(bookmark.demonstration) do%>
      <div class = "container_joined_demo">
        <div class= "description_joined_demo">
          <div>
            <% if bookmark.demonstration.title.length > 48%>
              <h6><%=bookmark.demonstration.title.first(48)%>...</h6>
            <%else%>
              <h6><%= bookmark.demonstration.title%></h6>
            <%end%>
          </div>
          <div>
            <%if bookmark.demonstration.description.length > 48%>
            <p><%=bookmark.demonstration.description.first(48)%>...</p>
            <%else%>
            <p><%=bookmark.demonstration.description%></p>
            <%end%>
          </div>
        </div>
        <div class="datetime">
          <div class="datestyle">
            <h5><%= bookmark.demonstration.start_time.strftime("%b %e") %></h5>
            <p><%= bookmark.demonstration.start_time.strftime("%H:00")%></p>
          </div>
        </div>
  </div>
    <%end%>
  <%end%>
