
<div class="main-wrapper-search" data-controller="search-demonstrations">
<h1>Find demo's 🔍</h1>
    <%= form_with url: demonstrations_path, method: :get, html: {class:
      "my-4", data: {search_demonstrations_target: "form"}} do |f| %>
      <%= f.text_field :query,
                      class: "search-bar-light",
                      placeholder: "search your demo",
                      value: params[:query],
                      data: {
                              search_demonstrations_target: "input",
                              action: "keyup->search-demonstrations#update"
                            } %>
      <% end %>
    <%= render "demonstrations/filter_demonstration", types: @types, topics: @topics%>
    <%= render "demonstrations/list_demonstrations", demonstrations: @demonstrations%>
  </div>
