<div class="grid" data-search-demonstrations-target= "list">
  <% @demonstrations.each do |demonstration| %>
    <%= link_to demonstration_path(demonstration) do%>
      <div class="container_new_demo">
        <div class="container_top_new_demo">
          <h1><%= demonstration.title %></h1>
          <div class="datetime">
            <div class="datestyle">
              <h5> Dec 7</h5>
                <p>12:00</p>
            </div>
          </div>
        </div>
        <div class="location_new_demo">
          <p><%= demonstration.location %></p>
        </div>
        <div class= "labels_new_demo">
          <%demonstration.topics.each do |topic|%>
            <button class= "label_inactive <%=topic.color%>">
              <%= topic.name %>
            </button>
          <% end %>
          <%demonstration.types.each do |type|%>
            <button class= "label_inactive <%=type.color%>">
              <%= type.name %>
            </button>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>


